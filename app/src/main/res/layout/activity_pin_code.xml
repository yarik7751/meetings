<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_indicators"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator"/>
        </LinearLayout>

        <TextView
            style="@style/FontRoman"
            android:id="@+id/tv_forgot_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="@color/text_white_op"
            android:text="@string/pin_forgot_pincode"/>

        <TextView
            android:id="@+id/tv_pin_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text=""/>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:tag="1"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:tag="2"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3"
                        android:tag="3"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:tag="4"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="5"
                        android:tag="5"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:id="@+id/textView" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="6"
                        android:tag="6"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7"
                        android:tag="7"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="8"
                        android:tag="8"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="9"
                        android:tag="9"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:tag="0"
                        android:onClick="clickNumber"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/pin_code_deselect">

                    <ImageView
                        android:id="@+id/img_backspace"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/del"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>