<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_photos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/button_blue">
                
                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sunglasses"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/ink_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentBottom="true"
                    app:ci_drawable="@drawable/activ_dot"
                    app:ci_drawable_unselected="@drawable/normal_dot"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_white_24dp"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <com.elatesoftware.meetings.ui.view.CustomEditText
                    android:id="@+id/cet_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/name"/>

                <!--<com.elatesoftware.meetings.ui.view.CustomEditText
                    android:id="@+id/cet_age"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/age"/>-->

                <com.dd.CircularProgressButton
                    android:id="@+id/btn_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cpb_textIdle="@string/birth_date"
                    app:cpb_selectorIdle="@drawable/button_gray_bg"
                    app:cpb_cornerRadius="5dp"/>

                <!--<com.elatesoftware.meetings.ui.view.CustomEditText
                    android:id="@+id/cet_height"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/height"/>

                <com.elatesoftware.meetings.ui.view.CustomEditText
                    android:id="@+id/cet_weight"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/weight"/>-->

                <com.elatesoftware.meetings.ui.view.CustomEditText
                    android:id="@+id/cet_about"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="5"
                    android:gravity="left|top"
                    android:hint="@string/about_me"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_white_op"
                    android:text="@string/all_information_is_optional"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            style="?attr/actionButtonStyle"
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_keyboard_arrow_left_white_18dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/edit_profile"
            android:textStyle="bold"/>

        <TextView
            style="?attr/actionButtonStyle"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/done"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>